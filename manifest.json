{
      "manifest_version": 2,
      "name": "F_Off",
      "version": "1.0",
      "description": "Hide blocked messages on Discord",
      "icons": {
            "48": "assets/icon.jpg"
      },
      "browser_specific_settings": {
            "gecko": {
                  "id": "f_off@f_off.com"
            }
      },

      "content_scripts": [
            {
                  "matches": [
                        "*://*.discord.com/*",
                        "*://*.discord.gg/*"
                  ],
                  "js": [
                        "scripts/app.js"
                  ]
            }
      ],
      "permissions": [
            "activeTab",
            "*://*.discord.com/*",
            "*://*.discord.gg/*",
            "*://raw.githubusercontent.com/exoad/f_off/main/api/*"
      ]
}